@page "/"

<PageTitle>Z-Blogger</PageTitle>

<div class="d-flex flex-column justify-content-center align-items-center vh-100 text-center animate-container">
    <img src="data:image/svg+xml;base64,@Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(LogoSvg))" 
         width="150" height="150" alt="Z-Blogger Logo" class="mb-4 animate-logo" />
    
    <h1 class="mb-2 display-1 animate-text">Welcome to Z-Blogger</h1>
    <p class="lead display-6 animate-subtext">
        Where words weave wonders and stories unfold,
        Join our journey, let your thoughts be bold.
    </p>
</div>

